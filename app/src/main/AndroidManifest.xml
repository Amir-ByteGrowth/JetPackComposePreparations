<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jetpackcomposepreparations">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetPackComposePreparations">
        <activity
            android:name=".ComposeUiPreperationsActivity"
            android:exported="true"
            android:label="@string/title_activity_compose_ui_preperations"
            android:theme="@style/Theme.JetPackComposePreparations.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DifferentStateSavingMethodsScreen"
            android:exported="true"
            android:label="@string/title_activity_different_state_saving_methods_screen"
            android:theme="@style/Theme.JetPackComposePreparations.NoActionBar">

        </activity>
        <activity
            android:name=".ListStateManagementActivity"
            android:exported="true"
            android:label="@string/title_activity_list_state_management"
            android:theme="@style/Theme.JetPackComposePreparations.NoActionBar"></activity>
        <activity
            android:name=".StateMAnagementActivity"
            android:exported="true"
            android:label="@string/title_activity_state_management"
            android:theme="@style/Theme.JetPackComposePreparations.NoActionBar" />
        <activity
            android:name=".Testing"
            android:exported="true"
            android:label="@string/title_activity_testing"
            android:theme="@style/Theme.JetPackComposePreparations.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetPackComposePreparations.NoActionBar" />
    </application>

</manifest>